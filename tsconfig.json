{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true, // JS と TS を混在可（徐々に置き換え）
    "checkJs": false, // 必要なら true にして JSDoc 型チェックも可
    "noEmit": true,
    "strict": false, // 最初は緩め → 後で true に
    "noImplicitAny": false, // 最初は緩め → 後で true に
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ] // 使っている alias に合わせる（src/ を使ってなければ削除）
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
